{% extends 'base.html.twig' %}

{% block title %}Mot de passe publi√© - LA Boutique Brotonne{% endblock %}

{% block content %}
    <div class="block-small" >
    {% for message in app.flashes('notice') %}
      <div class="alert alert-info">{{message}}</div>
    {% endfor %} 
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Reinitialiser mon mot de passe</h1>
            <label for="inputEmail">Votre email</label>
            <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="votre adresse email" required autofocus>
            <button class="btn btn-info btn-block mt-3 " type="submit">
                 Valider
            </button>
            <hr>
                <p class="text-center">Ou souhaiterez-vous  <a href="{{path('app_login')}}">Vous connectez</a></p>
        </form>

    </div>
{% endblock %}
